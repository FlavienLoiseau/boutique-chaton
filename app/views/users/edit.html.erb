<div class="container">
  <div class="mt-3 col-6">
    <div class="d-flex row">
      <% if @user.avatar.attached? %>
      <%= image_tag  @user.avatar, class:"img-avatar float-right mt-2" %>
      <% else %>
      <img src="https://highstylife.com/media/2017/04/aidan-meyer-150933-1140x760.jpg" alt="Avatar" class="img-avatar float-right mt-2">
      <% end %>
      <h1 class="text-center mt-4 ml-5">Ma page profil</h1>
    </div>
    <div class='mt-5'>
      <%= form_with model: @user, local: true do |f| %>
      <%= f.text_field :first_name, class: 'form-control m-3' %>
      <%= f.text_field :last_name, class: 'form-control m-3' %>
      <%= f.file_field :avatar, class:"m-3" %>
      <%= f.fields_for @address, local: true do |address| %>
      <%= address.text_field :street_number, class: 'form-control m-3', placeholder:"NumÃ©ro de la rue" %>
      <%= address.text_field :street, class: 'form-control m-3', placeholder:"Rue" %>
      <%= address.text_field :zip_code, class: 'form-control m-3', placeholder:"Code postal" %>
      <%= address.text_field :city, class: 'form-control m-3', placeholder:"Ville" %>
      <%= address.text_field :country, class: 'form-control m-3', placeholder:"Pays" %>
      <% end %>
      <div class="mt-3">
        <%= f.submit "Sauvegarder info perso", class:"btn btn-primary", style:"color:white" %>
      </div>
      <% end %>
    </div>
  </div>
</div>