<h1 class="mt-5 text-center mb-5">Découvre les plus beaux chatons</h1>
<hr>


<div class="d-flex">
  <div class="row justify-content-center">
    <% @products.each do |product| %>
    <div class="col-lg-3 col-md-5 col-sm-10 col-xs-12 m-4" style="min-width:350px">
      <div class="card mb-3 h-100">
        <img src="https://www.popfixion.fr/upload/news/unes/20150301_034854Felix_thewonderful_cat.jpg" class="card-top-image d-block user-select-none img-fluid" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
        <div class="card-body">
          <h5 class="card-title"><%= product.title %></h5>
          <p class="card-text"><%= product.description %></p>
        </div>
        <h1 class="card-title pricing-card-title text-center"><%= product.price %>€</h1>
        <div class="card-body">
          <%= link_to  "Détails", product_path(product.id), class:"btn btn-primary", style:"color:white" %>

          <%= link_to  "Ajouter au panier", line_items_path(product_id: product.id), method: :post, class:"btn btn-secondary" %>

        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
